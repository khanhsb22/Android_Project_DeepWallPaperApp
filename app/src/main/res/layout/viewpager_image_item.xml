<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/image_single"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:padding="5dp"
        android:background="@drawable/custom_border_icon"
        android:id="@+id/image_back_viewpager"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:padding="10dp"
        android:background="@drawable/custom_border_icon"
        android:id="@+id/image_share_picture"
        android:layout_margin="16dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/linear_single_image"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom"
        android:background="#61000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_set_background"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_set_background"
            />

        <ImageView
            android:id="@+id/image_add_to_album"
            android:layout_marginLeft="50dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_add_to_album"
            />

        <ToggleButton
            android:id="@+id/toggle_fav_image"
            android:layout_marginLeft="50dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/toggle_fav_image"
            android:textOn=""
            android:textOff=""/>

        <ImageView
            android:layout_marginLeft="50dp"
            android:id="@+id/image_download"
            android:src="@drawable/ic_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>


</FrameLayout>