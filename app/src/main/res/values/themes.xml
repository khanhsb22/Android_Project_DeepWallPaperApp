<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Image.App" parent="Theme.AppCompat.Light.NoActionBar">
<!--         Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_for_toolbar</item>

    </style>


    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/blue_for_toolbar</item>
        <item name="colorPrimary">@color/blue_for_toolbar</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/blue_for_toolbar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue_for_toolbar</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_for_toolbar</item>

        <item name="android:windowBackground">@drawable/splash_screen_layer</item>
    </style>

    <!--For AppbarLayout ImageOfCategoryActivity-->

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/check_color</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>